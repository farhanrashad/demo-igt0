<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_product_availability_wizard" model="ir.ui.view">
			<field name="name">Product Availability</field>
			<field name="model">product.availablity.report</field>
			<field name="arch" type="xml">
				<form string="Product Availability">
					<group>
						<group>
							<field name="date"/>
						</group>
						<group>
							<field name="location" />
						</group>
					</group>
					<notebook>
						<page string="Products">
							<field name="product_ids"/>
						</page>
					</notebook>
					<footer>
						<button name="action_report_gen" type="object" string="Generate Excel" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_product_availability_wizard" model="ir.actions.act_window">
			<field name="name">Product Availability Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.availablity.report</field>
			<field name="view_id" ref="view_product_availability_wizard" />
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

    </data>
</odoo>
