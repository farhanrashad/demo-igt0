<?xml version="1.0" encoding="utf-8"?>
<odoo>	
    <!-- Subscriptions Stage -->
    <record id="sale_subscription_agreement_stage_view_list" model="ir.ui.view">
        <field name="name">sale.subscription.agreement.stage.list</field>
        <field name="model">sale.subscription.agreement.stage</field>
        <field name="arch" type="xml">
            <tree string="Subscription Stages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    
    <record id="sale_subscription_agreement_stage_view_form" model="ir.ui.view">
        <field name="name">sale.subscription.agreement.stage.form</field>
        <field name="model">sale.subscription.agreement.stage</field>
        <field name="arch" type="xml">
            <form string="Subscription Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence" groups="base.group_no_one"/>
                        </group>
                        <group>
                            <field name="fold"/>
                            <field name="is_closed"/>
                        </group>
                    </group>
                    <separator string="Requirements"/>
                    <field name="description"
                           placeholder="Give your team the requirements to move a subscription to this stage."/>
                </sheet>
            </form>
        </field>
    </record>
		<record id="action_sale_subscription_agreement_stage" model="ir.actions.act_window">
			<field name="name">Subscription Stage</field>
			<field name="res_model">sale.subscription.agreement.stage</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Create a new subscription stage
				</p>
               
			</field>
		</record>
		
		<menuitem id="sale_subscription_config_stage_menu" name="Subscription Stages" parent="sale_subscription_config_menu"
			action="action_sale_subscription_agreement_stage"
			sequence="1" />
		
			
</odoo>


