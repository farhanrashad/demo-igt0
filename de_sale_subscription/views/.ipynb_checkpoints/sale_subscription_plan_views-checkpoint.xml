<?xml version="1.0" encoding="utf-8"?>
<odoo>	
    <!-- Subscriptions Plans -->
    <record id="sale_subscription_plan_view_list" model="ir.ui.view">
        <field name="name">sale.subscription.plan.list</field>
        <field name="model">sale.subscription.plan</field>
        <field name="arch" type="xml">
            <tree string="Subscription Plans">
                <field name="code"/>
                <field name="name"/>
                <field name="recurring_interval_type"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
    
    <record id="sale_subscription_plan_view_form" model="ir.ui.view">
        <field name="name">sale.subscription.plan.form.view</field>
        <field name="model">sale.subscription.plan</field>
        <field name="arch" type="xml">
            <form string="Subscription">
                <sheet string="Subscription">
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Monthly Subscription"/>
                        </h1>
                    </div>
                    <group name="invoicing">
                        <group>
                            <label for="recurring_interval"/>
                            <div class="o_row">
                                <span class="mr-1">Every</span>
                                <field name="recurring_interval" required="1"/>
                                <field name="recurring_interval_type" class="field_rule_type" required="1"/>
                            </div>
                            <field name="recurring_interval_rule" widget="radio" options="{'horizontal':true}"/>
                            <span class="o_form_label" attrs="{'invisible': [('recurring_interval_rule','=','unlimited')]}"/>
                            <div class="o_row" attrs="{'invisible': [('recurring_interval_rule','=','unlimited')]}">
                                <span class="mr-1">For</span>
                                <field name="recurring_interval_count"/>
                                <field class="mr-1" name="recurring_interval_type" readonly="1" />
                            </div>
                            
                            <field name="invoicing_mode" string="Create Invoice" widget="radio"/>
                            
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="code" />
                            <field name="journal_id" />
                            <field name="group_invoices"/>
                            <field name="company_id" />
                        </group>
                    </group>
                    <group name="description">
                        <field name="description" placeholder="Terms and Conditions"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
		<record id="action_sale_subscription_plan" model="ir.actions.act_window">
			<field name="name">Subscription Plan</field>
			<field name="res_model">sale.subscription.plan</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Create a new plan of subscription
				</p>
                <p>
                    Plans are used to prefigure subscription that can be selected by the salespeople to quickly configure the terms and conditions of the subscription.
                </p>
			</field>
		</record>
		
		<menuitem id="sale_subscription_config_plan_menu" name="Subscription Plan" parent="sale_subscription_config_menu"
			action="action_sale_subscription_plan"
			sequence="1" />
		
			
</odoo>


