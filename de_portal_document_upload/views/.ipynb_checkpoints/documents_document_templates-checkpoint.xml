<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="portal_layout_stock_document" name="Portal layout: Stock Order menu entry" inherit_id="portal.portal_breadcrumbs" priority="25">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'docs' or docs" class="col-lg-2" t-attf-class="breadcrumb-item #{'active ' if not docs else ''}">
                <a t-if="docs" t-attf-href="/docs/document?{{ keep_query() }}">Documents</a>
                <t t-else="">Documents</t>
            </li>
            <li t-if="docs" class="breadcrumb-item active text-truncate col-8 col-lg-10">
                <t t-esc="docs.name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_docs" name="docs Order" customize_show="True" inherit_id="portal.portal_my_home" priority="25">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Documents</t>
                <t t-set="url" t-value="'/docs/document'"/>
                <t t-set="placeholder_count" t-value="'docs_count'"/>
            </t>
        </xpath>  
    </template>

    <template id="portal_documents_docs" name="docs Order">
         <t t-set="foo" t-value="2 + 1"/>
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Documents</t>
            </t>
            <t t-if="not grouped_docs">
                <div class="alert alert-warning mt8" role="alert">
                    There are no Documents.
                </div>
            </t>
            <t t-if="grouped_docs">
                <t t-call="portal.portal_table">
                    <t t-foreach="grouped_docs" t-as="docs">
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">No#</th>
                                <th class="text-left">Document</th>
                                <th class="text-left">URL</th>
                                <th class="text-left">Type</th>
                                <th class="text-left">Owner</th>
                                <th class="text-left">Created On</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="doc">
<!--                                <t t-if="material.user_id.id==uid" >-->
                                <tr>

                                     <td class="text-left">
                                        <span t-esc="doc.id" />
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="doc.name" />
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="doc.url" />
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="doc.type" />
                                    </td>
<!--                                     <td class="text-left">
                                        <span t-esc="doc.owner_id.name" />
                                    </td> -->
                                    <td class="text-left">
                                        <span t-esc="doc.create_date" />
                                    </td>

                                </tr>
<!--                               </t>-->
                            </t>
                            <tr>
                                <div>
                                    <t class="col-lg-7 col-md-8" >
                                        <a href="/document/create/" > <div class="btn btn-primary pull-left" style="height:30px; line-height:100%; ">upload</div> </a> 
                                    </t>
                                </div>
                            </tr>   
                        </tbody>
                    </t>
                </t>
            </t>   
        </t>
    </template>
        
    

     <template id="upload_documents" name="create Documents">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
                 <form action="/my/account" method="post" enctype="multipart/form-data">

                    <div class="form-group">

                          <div class="col-lg-3 col-md-4 text-right">

                          <label class="col-form-label" for="attachment">Attachment(s)</label>

                          </div>

                          <div class="col-lg-7 col-md-8">
                          
                          <input type="file" name="attachment" multiple="true"

               accept="image/*,application/pdf,video/*"/>

    	          </div>

	           </div>


                </form>    
                              
                                                
                </t>
        </template> 

</odoo>



