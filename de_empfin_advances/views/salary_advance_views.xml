<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="hr_salary_advance_search_view" model="ir.ui.view">
            <field name="name">hr.salary.advance.search</field>
            <field name="model">hr.salary.advance</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="Salary Advance" filter_domain="['|',('name','ilike',self)]"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                    <filter string="My Requests" domain="[('employee_id.user_id.id','=',uid)]" name="my_requests_filter"/>
                    <filter domain="[('state', '=', 'draft')]" string="To Submit" name="to_report" help="New Requests"/>
                    <filter domain="[('state','in',('submit','waiting_approval'))]" string="To Approve" name="submitted" help="Submitted Requests"/>
                    <filter domain="[('state', '=', 'approve')]" string="Approved" name="approved" help="Approved Requests"/>
                    <separator/>
               </search>
            </field>
        </record>


        <record id="hr_salary_advance_form_view" model="ir.ui.view">
            <field name="name">hr.salary.advance.form.view</field>
            <field name="model">hr.salary.advance</field>
            <field name="arch" type="xml">
                <form string="Advance">
                    <header>
                        <button name="submit_to_manager" string="Submit" type="object" states="draft" class="oe_highlight"/>                        
                        <button name="action_line_manager_approve" string="Approve" type="object" states="confirmed" class="oe_highlight"  groups="de_empfin_advances.group_hr_advance_line_manager" />     
                        <button name="action_hr_manager_approve" string="Approve" type="object" states="hr_approval" class="oe_highlight" groups="de_empfin_advances.group_hr_advance_hr_manager" />     
                        <button name="action_finance_manager_approve" string="Approve" type="object" states="finance_approval" class="oe_highlight" groups="de_empfin_advances.group_hr_advance_finance_manager" />     
                        <button name="action_close" string="Close" type="object" states="paid" class="oe_highlight"/>      
                        <button name="action_payment" string="Pay" type="object" states="approved" class="oe_highlight" groups="account.group_account_manager"/>

                        <button name="cancel" string="Cancel" type="object" states="draft,confirmed,approved"/>
                        <button name="action_refuse" string="Refuse" type="object" states="confirmed,hr_approval,finance_approval"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,hr_approval,finance_approval,approved,paid,close"/>
                    </header>
                	<sheet>
                        <field name="bill_count" invisible="1" />
                        <div class="oe_button_box" name="button_box"> 
                          <button class="oe_stat_button" icon="fa-book" name="action_view_invoice" type="object" attrs="{'invisible':[ ('bill_count', '=', 0)]}">
                                <field name="bill_count" widget="statinfo" string="Vendor Bill"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-book" 
                                    name="action_view_payment" type="object" attrs="{'invisible':[ ('payment_count', '=', 0)]}">
                            <field name="payment_count" widget="statinfo" string="Payment"/>
                            </button>
                        </div>
                        <div class="oe_title oe_left">
                            <h2>
                            <field name="name" class="oe_inline" readonly="1"/>
                            </h2>
                        </div>
                		<group>
	                		<group>
	                        	<field name="employee_id" attrs="{'readonly':[('state','!=','draft')]}"  on_change="onchange_employee_id(employee_id,employee_contract_id)"/>
                                <field name="department" attrs="{'readonly':[('state','!=','draft')]}" />  
                                <field name="date" attrs="{'readonly':[('state','!=','draft')]}" />
	                        	<field name="reason" attrs="{'readonly':[('state','!=','draft')]}"  />
                                <field name="exceed_condition" groups="hr.group_hr_manager,hr.group_hr_user" attrs="{'readonly':[('state','!=','draft')]}" />
		                    </group>
		                    <group>
                                <field name="currency_id" groups="base.group_multi_currency" attrs="{'readonly':[('state','!=','draft')]}" />
                                <field name="company_id"  groups="base.group_multi_currency" attrs="{'readonly':[('state','!=','draft')]}" />
                                <field name="employee_contract_id"   groups="hr.group_hr_manager,hr.group_hr_user"/>
	                    	</group>
                    	</group>
                        <notebook>
                            <page string="Lines">
                               <field name="cash_line_ids">  
                                <tree editable="bottom">
                                  <field name="type_id" attrs="{'readonly':[('state','!=','draft')]}" />
                                 <field name="product_id" attrs="{'readonly':[('state','!=','draft')]}" />
                                 <field name="description" attrs="{'readonly':[('state','!=','draft')]}" />
                                 <field name="quantity" attrs="{'readonly':[('state','!=','draft')]}" />
                                 <field name="unit_price" attrs="{'readonly':[('state','!=','draft')]}" />
                                 <field name="total_amount" attrs="{'readonly':[('state','!=','draft')]}" />  
                                 <field name="approve_amount" attrs="{'readonly':[('state','in',('paid','close','cancel', 'reject'))]}" />  
                                 <field name="remarks" attrs="{'readonly':[('state','!=','draft')]}" /> 
                                 <field name="finance_remarks" attrs="{'readonly':[('state','!=','draft')]}" />   
                                 <field name="approved" attrs="{'readonly':[('state','!=','draft')]}" />
                                <field name="state" readonly="1"/> 
                                <field name="advance_id" invisible="1"/>
                                <field name="employee_id" invisible="1"/>     
                                </tree>
                               </field>
                               
                                <group class="oe_subtotal_footer oe_right">
                                    <div class="oe_subtotal_footer_separator oe_inline">
                                        <label for="amount_total"/>
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                            </page>
                            <page string="Accounting Information" name="accounting_info">
                                <group>
                                    <group>
                                        <field name="deductable" />
                                        <field name="journal_type" invisible="1" />
                                        <field name="partner_id" />
                                        <field name="journal_id"  />
                                        <field name="payment_id" attrs="{'invisible':[('journal_type','=','purchase')]}" />
                                        <field name="payment_method_id"  attrs="{'invisible':[('journal_type','=','purchase')],'required':[('journal_type','in',['cash','bank'])]}" />
                                        <field name="account_id"   attrs="{'invisible':[('journal_type','!=','purchase')],'required':[('journal_type','=','purchase')]}" />
                                        <field name="payment_amount" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
		            </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_salary_advance_tree_view">
            <field name="name">hr.salary.advance.tree.view</field>
            <field name="model">hr.salary.advance</field>
            <field name="arch" type="xml">
                <tree string=" Advance">
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        
        <record id="action_my_salary_advance" model="ir.actions.act_window">
            <field name="name">Advance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.salary.advance</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_salary_advance_search_view"/>
            <field name="context">{'search_default_my_requests_filter':1}</field>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Requests.
                </p>
            </field>
        </record>

        <record id="action_my_salary_advance_request_approved" model="ir.actions.act_window">
            <field name="name">Salary Advance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.salary.advance</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_salary_advance_search_view"/>
            <field name="context">{'search_default_approved':1}</field>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Requests.
                </p>
            </field>
        </record>

         <record id="action_salary_advance_to_approve" model="ir.actions.act_window">
            <field name="name">Advance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.salary.advance</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_salary_advance_search_view"/>
            <field name="context">{'search_default_submitted': 1}</field>
            <field name="domain"></field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Requests.
                </p>
            </field>
        </record>

       
        <menuitem id="employee_salary_advance_menu" name="Advances" parent="de_empfin_core.emp_fin_root_menu" sequence="3"/>   

        <menuitem id="menu_my_salary_advance" action="action_my_salary_advance" parent="employee_salary_advance_menu" name="Request Advance" sequence="1" />
        <menuitem id="menu_salary_advance" action="action_salary_advance_to_approve" parent="employee_salary_advance_menu" name="Advance To Approve" sequence="3" groups="hr.group_hr_manager,hr.group_hr_user,account.group_account_manager"/>
        <menuitem id="menu_my_salary_advance_approved" action="action_my_salary_advance_request_approved" parent="employee_salary_advance_menu" name="My Approved Advance" sequence="2" />
    </data>
</odoo>