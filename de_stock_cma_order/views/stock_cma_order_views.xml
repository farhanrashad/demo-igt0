<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="stock_cma_order_calendar_view" model="ir.ui.view">
            <field name="name">stock.cma.order.calendar.view</field>
            <field name="model">stock.cma.order</field>
            <field name="arch" type="xml">
                <calendar string="CMA Order" date_start="date_order" color="state" hide_time="true" event_limit="5">
                    <field name="user_id" avatar_field="image_128" invisible="1"/>
                    <field name="state" filters="1" invisible="1"/>
                </calendar>
            </field>
    </record>
      
    <record id="stock_cma_order_tree_view" model="ir.ui.view">
            <field name="name">stock.cma.order.tree.view</field>
            <field name="model">stock.cma.order</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="CMA Order" multi_edit="1" sample="1">
                    <field name="message_needaction" invisible="1"/>
                    <field name="name" string="Number" readonly="1" decoration-bf="1"/>
                    <field name="date_order" string="Order Date" widget="date" optional="show"/>
                    <field name="date_scheduled" optional="show"/>
                    <field name="delivery_deadline" optional="hide"/>
                    <field name="date_delivered" optional="hide"/>
                    <field name="return_deadline" optional="hide"/>
                    <field name="date_returned" optional="hide"/>
                    <field name="partner_id" />
                    <field name="user_id" optional="show" widget="many2one_avatar_user" invisible="1"/>
                    <field name="activity_ids" widget="list_activity" optional="show"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show" readonly="1"/>
                    <field name="state" />
                </tree>
            </field>
    </record>
      
    <record id="stock_cma_order_form_view" model="ir.ui.view">
        <field name="name">stock.cma.order.form.view</field>
        <field name="model">stock.cma.order</field>
        <field name="arch" type="xml">
            <form string="CMA Order" class="" >
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                        attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                    
                    <button name="%(action_move_in_refund_type_cma_order)d" type="action" states="confirm,delivery,return" context="{'default_stock_cma_order_id':id,'default_move_type':'in_refund', 'default_partner_id': partner_id}" string="Credit Note" class="btn-primary"/>
                    
                    <button name="create_delivery" type="object" class="oe_highlight" states="confirm" string="Create Delivery" />
                    <button name="create_return" type="object" class="oe_highlight" states="delivery" string="Create Return" />
                    <button name="action_done" type="object" class="oe_highlight" states="confirm,delivery,return" string="Close" />
                    
                    <button name="action_cancel" type="object" string="Cancel" states="draft,confirm"/>
                    
                    <button name="action_draft" states="cancel" type="object" string="Set to Draft"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_delivery" type="object" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('delivery_count', '=', 0)]}">
                        <field name="delivery_count" widget="statinfo" string="Delivery"/>
                        </button>
                        <button name="action_view_receipt" type="object" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('return_count', '=', 0)]}">
                        <field name="return_count" widget="statinfo" string="Receipt"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-book" name="action_view_credit_note" type="object">
                            <field name="bill_count" widget="statinfo" string="Bills"/>
                        </button>
                        
                       
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group name="cma_header">
                        <group name="partner_details">
                            
                            <field name="partner_id" widget="res_partner_many2one" options='{"always_reload": True}'/>
                            
                            <field name="date_request" />

                        </group>
                        <group name="cma_details">
                            <field name="cma_type_id" options="{'no_create':True, 'no_open':True}"/>
                            <field name="cma_type" invisible="0" />
                            <field name="user_id"/>
                            <field name="user_id" domain="[('share', '=', False)]" widget="many2one_avatar_user" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" attrs="{'readonly': [('state','not in',('draft'))]}"/>

                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="date_order" />
                            <field name="date_scheduled"/>
                            <field name="delivery_deadline"/>
                            <field name="date_delivered"/>
                            <field name="return_deadline"/>
                            <field name="date_returned"/>
                            
                        </group>
                        <group string="Reference" name="order_ref">
                            <field name="purchase_id" />
                            <field name="cma_order_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Products" name="cma_order_line">
                            <field name="stock_cma_order_line" widget="one2many_list">
                                <tree string="CMA lines" editable="bottom">
                                    <field name="product_id" required="1"/>
                                    <field name="name"/>
                                    <field name="product_uom_qty"/>
                                    <field name="delivered_qty" optional="show"/>
                                    <field name="received_qty" optional="show"/>
                                    <field name="product_uom"/>
                                    <field name="date_scheduled" />
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="location_src_id" optional="hide"/>
                                    <field name="location_dest_id" optional="hide"/>
                                </tree>
                            </field>
                        <separator string="Terms and Conditions"/>
                        <field name="description" attrs="{'readonly': [('state','not in',('draft','in_progress'))]}"/>

                        </page>
                         
                        <page string="Picking Details" name="picking_details" >
                            <group>
                                <group>
                                    <field name="warehouse_id"/>
                                    <field name="picking_type_id"/>
                                    <field name="return_picking_type_id"/>
                                    <field name="location_src_id"/>
                                    <field name="location_dest_id"/>    
                                </group>
                                <group>
                                    <field name="return_location_id" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
      
    <record id="stock_cma_order_search_view" model="ir.ui.view">
        <field name="name">stock.cma.order.filter.view</field>
        <field name="model">stock.cma.order</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <search string="Search CMA Order">
                <field name="name" string="Reference" filter_domain="['|', ('name', 'ilike', self), ('origin', 'ilike', self)]"/>
                <field name="user_id" invisible="1"/>
                <field name="partner_id" operator="child_of"/>
                <filter string="My Orders" name="my_cma_orders" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" help="New Agreements"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', 'in', ('in_progress', 'open'))]" help="In negotiation"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter invisible="1" string="Late Activities" name="activities_overdue"
                        domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                        help="Show all records which has next action date is before today"/>
                <filter invisible="1" string="Today Activities" name="activities_today"
                        domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter invisible="1" string="Future Activities" name="activities_upcoming_all"
                        domain="[('activity_ids.date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Responsible" name="responsible" domain="[]" context="{'group_by': 'user_id'}"/>
                    <filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Order Date" name="date_order" domain="[]" context="{'group_by': 'date_order'}"/>
                </group>
                
            </search>
        </field>
      </record>
      
    <record id="action_stock_cma_order_request" model="ir.actions.act_window">
            <field name="name">CMA Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.cma.order</field>
            <field name="view_mode">tree,kanban,form,activity</field>
            <field name="search_view_id" ref="stock_cma_order_search_view"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new contractor material authorization Order!
                </p><p>
                    Once the CMA order is confirmed.<br/> You will be able to create picking documents.
                </p>
            </field>
    </record>
 
    <menuitem action="action_stock_cma_order_request" id="stock_cma_root_stock_cma_order_request_menu" parent="stock_cma_root_menu" sequence="1"/>
      
      <record id="action_stock_cma_order" model="ir.actions.act_window">
            <field name="name">CMA Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.cma.order</field>
            <field name="view_mode">tree,kanban,form,activity</field>
            <field name="search_view_id" ref="stock_cma_order_search_view"/>
            <field name="domain">[('state','=','confirm')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new contractor material authorization Order!
                </p><p>
                    Once the CMA order is confirmed.<br/> You will be able to create picking documents.
                </p>
            </field>
    </record>
 
    <menuitem action="action_stock_cma_order" id="stock_cma_root_stock_cma_order_menu" parent="stock_cma_root_menu" sequence="2"/>
      
      <record id="action_stock_cma_order_pending" model="ir.actions.act_window">
            <field name="name">Pending Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.cma.order</field>
            <field name="view_mode">tree,kanban,form,activity</field>
            <field name="search_view_id" ref="stock_cma_order_search_view"/>
            <field name="context">{'create':False}</field>
            <field name="domain">[('state','in',['delivery','return'])]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Contractor material authorization Order!
                </p>
            </field>
    </record>
 
    <menuitem action="action_stock_cma_order_pending" id="stock_cma_root_stock_cma_order_pending_menu" parent="stock_cma_root_menu" sequence="3"/>

<!-- CMS Order Lines -->
      <record id="stock_cma_order_line_search_view" model="ir.ui.view">
        <field name="name">stock.cma.order.line.filter.view</field>
        <field name="model">stock.cma.order.line</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <search string="Search CMA Order Line">
                <field name="name" string="Reference" filter_domain="['|', ('name', 'ilike', self), ('origin', 'ilike', self)]"/>
            </search>
        </field>
      </record>
      
      <record id="stock_cma_order_line_tree_returnable_view" model="ir.ui.view">
            <field name="name">stock.cma.order.line.tree.returnable.view</field>
            <field name="model">stock.cma.order.line</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="CMA Order line" >
                    <field name="name" />
                    <field name="stock_cma_order_id" optional="hide"/>
                    <field name="partner_id" />
                    <field name="product_id" />
                    <field name="product_uom_qty" />
                    <field name="delivered_qty" optional="show"/>
                    <field name="received_qty" optional="show"/>
                    <field name="location_src_id" optional="hide"/>
                    <field name="location_dest_id" optional="hide"/>
                    <field name="date_scheduled" />
                    <field name="user_id" optional="show" widget="many2one_avatar_user" invisible="1"/>
                    <field name="state" />
                </tree>
            </field>
    </record>
      
      <record id="action_stock_cma_order_line" model="ir.actions.act_window">
            <field name="name">Returnable Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.cma.order.line</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('stock_cma_order_line_tree_returnable_view')})]"/>
            <field name="search_view_id" ref="stock_cma_order_line_search_view"/>
          <field name="context">{'create':False}</field>
           <field name="domain">[('state','in',['delivery'])]</field> 
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Returnable Products
                </p>
            </field>
    </record>
 
    <menuitem action="action_stock_cma_order_line" id="stock_cma_root_stock_cma_order_line_menu" parent="stock_cma_root_menu" sequence="4"/>


  </data>
</odoo>