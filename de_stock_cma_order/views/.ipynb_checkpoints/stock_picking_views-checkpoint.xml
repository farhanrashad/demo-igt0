<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      
    <record model="ir.actions.act_window" id="action_cma_stock_picking_list">
        <field name="name">Pickings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('stock_cma_order_id','=',active_id)]</field>
        <field name="context">{
            "default_stock_cma_order_id":active_id,
            "default_user_id": False,
            }
        </field>
    </record>
      
      <record model="ir.actions.act_window" id="action_cma_to_picking">
        <field name="name">Picking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">form,tree</field>
        <field name="domain">[('stock_cma_order_id','=',active_id)]</field>
        <field name="context">{
            "default_stock_cma_order_id":active_id,
            "default_user_id": False,
            }
        </field>
    </record>
      
      <record id="view_picking_form_inherit" model="ir.ui.view">
            <field name="name">view.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="stock_cma_order_id" readonly="1" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="stock_cma_order_line_id" optional="hide"/>
                    <field name="stock_cma_condition_id" optional="show"/>
                </xpath>
            </field>
    </record>
      
       <record id="view_move_form_inherit_cma_order" model="ir.ui.view">
            <field name="name">view.move.form.inherit.cma.order</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='reference']" position="after">
                    <field name="stock_cma_order_line_id" readonly="1" invisible="0"/>
                </xpath>
            </field>
    </record>
      

  </data>
</odoo>