<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="stock_cma_condition_tree_view">
            <field name="name">stock.cma.condition.tree.view</field>
            <field name="model">stock.cma.condition</field>
            <field name="arch" type="xml">
                <tree string="CMA Condition" editable="bottom" sample="1">
                    <field name="name"/>
                    <field name="is_default"/>
                </tree>
            </field>
        </record>

        <record id="action_stock_cma_condition" model="ir.actions.act_window">
            <field name="name">Material Condition</field>
            <field name="res_model">stock.cma.condition</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No material condition found. Let's create one!
              </p>
            </field>
        </record>
        
        <menuitem action="action_stock_cma_condition" name="Material Condition" id="menu_stock_cma_config_condition_menu" groups="group_stock_cma_manager" parent="stock_cma_config_menu" sequence="1"/>
        
    </data>
</odoo>