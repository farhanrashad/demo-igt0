<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tags -->
        <record model="ir.ui.view" id="stock_cma_type_search_view">
            <field name="name">stock.cma.type.search.view</field>
            <field name="model">stock.cma.type</field>
            <field name="arch" type="xml">
                <search string="CMA Type">
                    <field name="name"/>
                    <field name="action_type"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_cma_type_form_view">
            <field name="name">stock.cma.type.form.view</field>
            <field name="model">stock.cma.type</field>
            <field name="arch" type="xml">
                <form string="Types">
                    <sheet>
                        <group>
                            <group>
                            <field name="name"/>
                            </group>
                            <group>
                                <field name="action_type" widget='radio'/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Give your team the requirements to create a requisition"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_cma_type_tree_view">
            <field name="name">stock.cma.type.tree.view</field>
            <field name="model">stock.cma.type</field>
            <field name="arch" type="xml">
                <tree string="CMA Type" >
                    <field name="name"/>
                    <field name="action_type"/>
                </tree>
            </field>
        </record>

        <record id="action_stock_cma_type_view" model="ir.actions.act_window">
            <field name="name">Requisition Type</field>
            <field name="res_model">stock.cma.type</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No requisition type found. Let's create one!
              </p>
              <p>
                  types are perfect to categorize your requisitions.
              </p>
            </field>
        </record>
        
        <menuitem action="action_stock_cma_type_view" name="Type" id="stock_cma_config_type_menu" groups="group_stock_cma_manager" parent="stock_cma_config_menu" sequence="0"/>
        
    </data>
</odoo>