<odoo>
    <data>
        <report
                id="mrf_report"
                model="stock.transfer.order"
                string="MRF Report"
                report_type="qweb-pdf"
                name="de_mrf_report.mrf_report_print"
                file="MRF Report"
        />
    <template id="mrf_report_print">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <table class="table table-condensed"
                           style="border:2px solid black;">
                        <tr>
                            <td style="text-align: center;
                                       font-weight:bold">
                                <b>MATERIAL REQUISITION FORM</b>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="1" style="border:2px solid black;">
                                <b> MRF No.</b>
                            </td>
                            <td colspan="1" style="border:2px solid black;"> 
                                <span t-field="docs.name"/>
                            </td>
                        </tr>
                    </table>
                </t>
            </t>
    </template>    
    </data>
</odoo>
