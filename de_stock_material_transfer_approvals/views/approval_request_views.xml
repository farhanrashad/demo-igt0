<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Approval Request -->
        <record id="approval_request_view_form_inherit_stock_transfer" model="ir.ui.view">
			<field name="name">approval.request.view.form.inherit.stock.transfer</field>
			<field name="model">approval.request</field>
			<field name="inherit_id" ref="approvals.approval_request_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//group[@name='request_details']" position="inside">
                    <field name="stock_transfer_order_id" attrs="{'invisible':[('stock_transfer_order_id','=',False)]}"/>
				</xpath>
			</field>
		</record>
    </data>
</odoo>