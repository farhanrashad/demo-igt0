<odoo>
  <data>
     <record id="hr_contract_form_view_contract_type" model="ir.ui.view">
			<field name="name">hr.contract.form.view</field>
			<field name="model">hr.contract</field>
			<field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@name='title']" position="before">                  
                    <div class="oe_title pr-0" name="title">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="code" class="text-truncate" placeholder="Contract Reference"/>
                        </h1>
                    </div>
				</xpath>
                <xpath expr="//field[@name='structure_type_id']" position="after">                  
                    <field name="type" />
                        
				</xpath>
			</field>
		</record>
      
  </data>
</odoo>