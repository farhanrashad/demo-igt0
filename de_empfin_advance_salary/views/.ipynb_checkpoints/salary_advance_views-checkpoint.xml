<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="hr_salary_advance_search_view" model="ir.ui.view">
            <field name="name">hr.salary.advance.search</field>
            <field name="model">hr.salary.advance</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="Salary Advance" filter_domain="['|',('name','ilike',self)]"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                    <filter string="My Requests" domain="[('employee_id.user_id.id','=',uid)]" name="my_requests_filter"/>
                    <filter domain="[('state', '=', 'draft')]" string="To Submit" name="to_report" help="New Requests"/>
                    <filter domain="[('state','in',('submit','waiting_approval'))]" string="To Approve" name="submitted" help="Submitted Requests"/>
                    <filter domain="[('state', '=', 'approve')]" string="Approved" name="approved" help="Approved Requests"/>
                    <separator/>
               </search>
            </field>
        </record>


        <record id="hr_salary_advance_form_view" model="ir.ui.view">
            <field name="name">hr.salary.advance.form.view</field>
            <field name="model">hr.salary.advance</field>
            <field name="arch" type="xml">
                <form string="Salary Advance">
                    <header>
                        <button name="submit_to_manager" string="Submit" type="object" states="draft" class="oe_highlight"/>
                        <button name="approve_request" string="Approve" type="object" states="submit" class="oe_highlight" groups="hr.group_hr_manager,hr.group_hr_user"/>
                        <button name="action_approve" string="Approve" type="object" states="waiting_approval" class="oe_highlight" groups="account.group_account_manager,account.group_account_user"/>
                        <button name="cancel" string="Cancel" type="object" states="draft,submit"/>
                        <button name="action_refuse" string="Refuse" type="object" states="waiting_approval"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submit,waiting_approval,approve,cancel,reject"/>
                    </header>
                	<sheet>
                        <field name="bill_count" invisible="1" />
                        <div class="oe_button_box" name="button_box"> 
                          <button type="object" name="action_get_bill" string="Advances Bills"  class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible':[ ('bill_count', '=', 0)]}">
                            </button>
                        </div>
                        <div class="oe_title oe_left">
                            <h2>
                            <field name="name" class="oe_inline" readonly="1"/>
                            </h2>
                        </div>
                		<group>
	                		<group>
	                        	<field name="employee_id" on_change="onchange_employee_id(employee_id,employee_contract_id)"/>
                                <field name="department"/>
                                <field name="date"/>
	                        	<field name="reason"/>
                                <field name="exceed_condition" groups="hr.group_hr_manager,hr.group_hr_user"/>
		                    </group>
		                    <group>
                    			<field name="advance"/>
                                <field name="currency_id" groups="base.group_multi_currency"/>
                                <field name="company_id"  groups="base.group_multi_currency"/>
                                <field name="employee_contract_id"   groups="hr.group_hr_manager,hr.group_hr_user"/>
	                    	</group>
                    	</group>
                        <notebook>
                            <page string="Accounting Information" name="accounting_info">
                                <group>
                                    <group>
                                        <field name="deductable" />
                                        <field name="partner_id" />
                                        <field name="journal_id"  />
                                        <field name="payment_id"/>
                                        <field name="payment_method_id"   />
                                        <field name="account_id"   />
                                        <field name="payment_amount" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
		            </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_salary_advance_tree_view">
            <field name="name">hr.salary.advance.tree.view</field>
            <field name="model">hr.salary.advance</field>
            <field name="arch" type="xml">
                <tree string="Salary Advance">
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="advance"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        
        <record id="action_my_salary_advance" model="ir.actions.act_window">
            <field name="name">Salary Advance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.salary.advance</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_salary_advance_search_view"/>
            <field name="context">{'search_default_my_requests_filter':1}</field>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Requests.
                </p>
            </field>
        </record>

        <record id="action_my_salary_advance_request_approved" model="ir.actions.act_window">
            <field name="name">Salary Advance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.salary.advance</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_salary_advance_search_view"/>
            <field name="context">{'search_default_approved':1}</field>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Requests.
                </p>
            </field>
        </record>

         <record id="action_salary_advance_to_approve" model="ir.actions.act_window">
            <field name="name">Salary Advance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.salary.advance</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_salary_advance_search_view"/>
            <field name="context">{'search_default_submitted': 1}</field>
            <field name="domain"></field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Requests.
                </p>
            </field>
        </record>

       
        <menuitem id="employee_salary_advance_menu" name="Advance Salary" parent="de_empfin_core.emp_fin_root_menu" sequence="3"/>   

        <menuitem id="menu_my_salary_advance" action="action_my_salary_advance" parent="employee_salary_advance_menu" name="Request Salary Advance" sequence="1" />
        <menuitem id="menu_salary_advance" action="action_salary_advance_to_approve" parent="employee_salary_advance_menu" name="Salary Advance To Approve" sequence="3" groups="hr.group_hr_manager,hr.group_hr_user,account.group_account_manager"/>
        <menuitem id="menu_my_salary_advance_approved" action="action_my_salary_advance_request_approved" parent="employee_salary_advance_menu" name="My Approved Salary Advance" sequence="2" />
    </data>
</odoo>